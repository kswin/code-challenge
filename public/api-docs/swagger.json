{
  "swagger": "2.0",
  "info": {
    "description": "Parse the data dump and make the data accessible in a structured, RESTful manner.",
    "title": "Code Challenge",
    "version": "1.0"
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "tags": [
    {
      "name": "exercise",
      "description": "Used to create skill-enhancing assessments."
    }
  ],
  "paths": {
    "/exercises": {
      "get": {
        "description": "Returns all exercises in the system.",
        "operationId": "getExercises",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "keywords",
            "in": "query",
            "description": "keyword associated with exercises",
            "required": false,
            "type": "array",
            "items": {
              "type": "string"
            },
            "allowEmptyValue": false,
            "collectionFormat": "multi",
            "allowMultiple": true
          },
          {
            "name": "offset",
            "in": "query",
            "description": "number of items to skip. default is 0. invalid offsets values are ignored and default is used instead.",
            "required": false,
            "type": "integer"
          },
          {
            "name": "limit",
            "in": "query",
            "description": "number of items to return. default is 20. invalid limit values are ignored and default is used instead.",
            "required": false,
            "type": "integer"
          },
          {
            "name": "sort",
            "in": "query",
            "description": "specifies the order of returned matches. accepted values are created, modified and difficulty, with optional '-' in front to note descending order. e.g. ?sort=-created,difficulty",
            "required": false,
            "type": "string"
          },
          {
            "name": "difficulty",
            "in": "query",
            "description": "easy, medium or hard",
            "required": false,
            "type": "string"
          }
        ],
        "tags": ["exercise"],
        "responses": {
          "200": {
            "description": "A list of exercises.",
            "schema": {
              "type": "array",
              "items":  {
                "$ref": "#/definitions/Exercise"
              }
            }
          },
          "400": {
            "description": "Bad request."
          },
          "500": {
            "description": "Unexpected server error."
          }
        }
      },
      "post": {
        "description": "Creates a new exercise(s). 'created', 'modified' and 'difficulty' fields are read-only. Difficulty is based on distractors length.",
        "operationId": "createExercise",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "tags": ["exercise"],
        "parameters": [
          {
            "name": "exercise",
            "in": "body",
            "description": "An exercise or array of exercises to be added to the system.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Body"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The newly created exercise.",
            "schema": {
              "$ref": "#/definitions/Exercise"
            }
          },
          "400": {
            "description": "Bad request."
          },
          "500": {
            "description": "Unexpected server error."
          }
        }
      }
    },
    "/exercises/{exerciseId}": {
      "get": {
        "description": "Returns an exercise based on id.",
        "operationId": "getExerciseById",
        "produces": ["application/json"],
        "tags": ["exercise"],
        "parameters": [
          {
            "name": "exerciseId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "A single exercise.",
            "schema": {
              "$ref": "#/definitions/Exercise"
            }
          },
          "404": {
            "description": "Entity not found."
          },
          "500": {
            "description": "Unexpected server error."
          }
        }
      },
      "put": {
        "description": "Updates an exercise based on id. 'created', 'modified' and 'difficulty' fields are read-only. Difficulty is based on distractors length. If a property is omitted from the body, it won't be updated.",
        "operationId": "updateExerciseById",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "tags": ["exercise"],
        "parameters": [
          {
            "name" : "exerciseId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "exercise",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Body"
            } 
          }
        ],
        "responses": {
          "200": {
            "description": "Updated exercise.",
            "schema": {
              "$ref": "#/definitions/Exercise"
            }
          },
          "400": {
            "description": "Bad request."
          },
          "500": {
            "description": "Unexpected server error."
          }
        }
      },
      "delete": {
        "description": "Deletes an exercise based on id.",
        "operationId": "deleteExerciseById",
        "produces": ["application/json"],
        "tags": ["exercise"],
        "parameters": [
          {
            "name": "exerciseId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Deleted exercise.",
            "schema": {
              "$ref": "#/definitions/Exercise"
            }
          },
          "404": {
            "description": "Entity not found."
          },
          "500": {
            "description": "Unexpected server error."
          }
        }
      }
    }
  },
  "definitions": {
    "Exercise": {
      "id": "Exercise",
      "required": ["question", "answer", "distractors"],
      "properties": {
        "answer": {
          "type": "string"
        },
        "distractors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "question": {
          "type": "string"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "difficulty": {
          "type": "string",
          "readOnly": true
        },
        "modified": {
          "type": "date"
        },
        "created": {
          "type": "date"
        }
      }
    },
    "Body": {
      "required": ["question", "answer", "distractors"],
      "properties": {
        "answer": {
          "type": "string"
        },
        "distractors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "question": {
          "type": "string"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
    },
    "GeneralError": {
      "required": ["code", "message"],
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}